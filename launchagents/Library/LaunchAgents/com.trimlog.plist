<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
	<dict>
		<key>Label</key>
		<string>com.trimlog</string>
		<key>ProgramArguments</key>
		<array>
			<string>/bin/bash</string>
			<string>-c</string>
			<string>
				for f in /opt/homebrew/var/log/*.log; do
					if [[ $(wc -l $f | cut -w -f 2) -gt 250 ]]; then
						echo "$(tail -n 200 $f)" > $f
					fi
				done
			</string>
		</array>
		<key>KeepAlive</key>
		<dict>
			<key>SuccessfulExit</key>
			<false/>
		</dict>
	</dict>
</plist>
