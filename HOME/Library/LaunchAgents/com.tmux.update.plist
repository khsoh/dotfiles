<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
	<dict>
		<key>Label</key>
		<string>com.tmux.update</string>
		<key>ProgramArguments</key>
		<array>
			<string>/bin/bash</string>
			<string>-c</string>
			<string>
				if [[ -f $HOME/.tmux/plugins/tpm/scripts/update_plugin.sh ]]; then
					$HOME/.tmux/plugins/tpm/scripts/update_plugin.sh all
				else
					for d in $HOME/.tmux/plugins/*; do
						pushd $d
						git pull --recurse-submodules
						popd
					done
				fi
			</string>
		</array>
		<key>KeepAlive</key>
		<dict>
			<key>SuccessfulExit</key>
			<false/>
		</dict>
		<key>StandardErrorPath</key>
		<string>/opt/homebrew/var/log/tmuxupdateError.log</string>
		<key>StandardOutputPath</key>
		<string>/opt/homebrew/var/log/tmuxupdate.log</string>
	</dict>
</plist>
